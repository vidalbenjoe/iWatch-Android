                android:id="@+id/b6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_colorwhite"
                android:textColor="@color/black_font"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:drawableRight="@drawable/leftarrow"
                android:paddingTop="14dp"
                android:paddingLeft="25dp"
                android:text="6"/>
            <Button
                android:id="@+id/b7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_colorlightpurple"
                android:textColor="@color/black_font"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:drawableRight="@drawable/leftarrow"
                android:paddingTop="14dp"
                android:paddingLeft="25dp"
                android:text="7"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_colorwhite"
                android:textColor="@color/black_font"
                android:paddingRight="10dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="13dp"
                android:paddingTop="14dp"
                android:drawableRight="@drawable/leftarrow"
                android:paddingLeft="25dp"
                android:text="8"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_colorlightpurple"
                android:textColor="@color/black_font"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingTop="14dp"
                android:drawableRight="@drawable/leftarrow"
                android:paddingLeft="25dp"
                android:text="9"/>
            <Button
                android:id="@+id/b10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_colorwhite"
                android:textColor="@color/black_font"
                android:paddingRight="10dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="13dp"
                android:drawableRight="@drawable/leftarrow"
                android:paddingTop="14dp"
                android:paddingLeft="25dp"
                android:text="10"/>


        </LinearLayout>
    </ScrollView>

