<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Text"
            android:visibility="invisible"/>




    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/abmcfooter">
        <LinearLayout
           android:id="@+id/dashboardid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/divider_color">"

            <Button
                android:id="@+id/btnImg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/banner7"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/arrowdown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"

                android:background="@color/homescreen_colorwhite"
                android:textColor="@color/black_font"
                android:paddingTop="14dp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:textSize="13dp"
                android:drawableTop="@drawable/arrowdown"

               />

            <Button
                android:id="@+id/b1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"

                android:background="@color/homescreen_colorlightpurple"
                android:textColor="@color/black_font"
                android:paddingTop="14dp"
                android:paddingLeft="25dp"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:drawableRight="@drawable/leftarrow"
                android:text="1"/>
            <Button
