<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkblack_purple">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:layout_below="@id/genheader"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/darkblack_purple">
    <ScrollView android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <EditText
                android:id="@+id/etFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:hint="First Name"/>

            <EditText
                android:id="@+id/etMname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:hint="Middle Name"/>

            <EditText
                android:id="@+id/etLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true"
                android:hint="Last Name"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etPword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"/>

            <EditText
                android:id="@+id/etPword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Re-type password"/>



            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:hint="Mobile"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:hint="Address"/>

                <EditText
                    android:id="@+id/etBdate"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="(YYYY-MM-DD) Birthdate"/>

                <Button android:id="@+id/pickDate"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:visibility="gone"
                    android:background="@drawable/calendar"/>








            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button android:id="@+id/btnCancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="20dp"
                    android:background="@drawable/purple_button"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"/>

                <Button android:id="@+id/btnRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/header_color"
                    android:textStyle="bold"
                    android:background="@drawable/purple_button"
                    android:textSize="20dp"
                    android:text="Register"
                    android:layout_weight="1"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>




    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/genheader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/divider_color"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Registration"
            android:textColor="#ffffffff"
            android:textSize="25sp"
            />
    </RelativeLayout>

</RelativeLayout>